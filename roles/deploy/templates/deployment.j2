apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment-{{ image_name }}
  namespace: {{ k8s_app_namespace }}
  labels:
    app: {{ image_name }}
spec:
  replicas: {{ k8s_replicas_count }}
  selector:
    matchLabels:
      app: {{ image_name }}
  template:
    metadata:
      labels:
        app: {{ image_name }}
    spec:
      containers:
      - name: {{ image_name }}
        image: {{ image_name }}:{{ image_tag }}
        ports:
        - containerPort: {{ image_exposed_port }}